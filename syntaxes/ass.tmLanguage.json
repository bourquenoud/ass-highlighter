{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ass",
	"patterns": [
		{
			"include": "#command"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#bit-constant"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#comment-block"
		},
		{
			"include": "#comment-doc"
		},
		{
			"include": "#comment-block-doc"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#substitution"
		}
	],
	"repository": {
		"command": {
			"patterns": [{
				"name": "keyword.control.ass",
				"match": "%(pattern|enum|param|order|format|opcode)(?=\\s)"
			}]
		},
		"substitution" :{
			"name": "keyword.ass",
			"match": "[A-Z_]+(?=\\([0-9]*\\))"
		},
		"strings": {
			"name": "string.quoted.double.ass",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ass",
					"match": "\\\\."
				}
			]
		},
		"bit-constant": {
			"name": "constant.numeric.bit-constant.ass",
			"match": "\\$[0-9]+(h|o|d|b)?"
		},
		"comment": {
			"name": "comment.line",
			"match": "//.*"
		},
		"comment-block": {
			"name": "comment.block",
			"begin":"/\\*",
			"end":"\\*/",
			"patterns": [
				{
					"name": "comment.block",
					"match": "\\\\."
				}
			]
		},
		"constant" :{
			"name": "constant.numeric.integer.ass",
			"match": "[0-9]+"
		}
	},
	"scopeName": "source.ass"
}